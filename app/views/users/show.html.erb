<%- unless @books == nil -%>
  <table width=100%>
    <tbody>
      <%- counter = 0 -%>
      <%- @books.each do |book| -%>
      <%- counter +=1 -%>
        <tr><td><%= counter %></td><td><%= link_to book.title, user_book_path(@user, book) %> by <%= book.author %></td></tr>
      <%- end -%>
    </tbody>
  </table>
<%- end -%>

<%- if user_signed_in? -%>
  <%- if current_user == User.find(params[:id]) -%>

    <%= form_tag(new_user_book_path(current_user), method: "get") do %>
      <%= label_tag(:q, "Title:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag "Search", class: "button" %>
    <% end %>

  <%- end -%>
<%- end -%>
